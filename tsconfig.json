{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".vscode/.tsbuildinfo",
    "target": "es2017",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "src": ["./src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "**/**/*.test.ts"]
}
